<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <div class="card-product">
            <%= cl_image_tag cocktail.photo, height: 150, width: 150, crop: :fill %>
            <div class="card-product-infos">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
              <p>Drink water <strong>and</strong> cocktails.</p>
              <p><%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure" }%></p>
            </div>
          </div>
        <% end %>
      </ul>
      <%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
